# ========================
# Scrambled Eggs Configuration
# ========================
# Copy this file to .env and modify the values as needed
# NEVER commit the actual .env file to version control

# ========== Application Settings ==========
APP_NAME="Scrambled Eggs"
DEBUG=False
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=5000

# ========== Security Settings ==========
# Generate secure keys using: openssl rand -hex 32
SECRET_KEY=generate_a_secure_random_key_here
ENCRYPTION_KEY=generate_a_secure_random_key_here
JWT_SECRET_KEY=generate_a_secure_random_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Session settings
SESSION_COOKIE_SECURE=True
SESSION_LIFETIME=3600  # 1 hour in seconds

# CSRF Protection
CSRF_ENABLED=True
CSRF_SECRET_KEY=generate_a_secure_random_key_here

# Rate limiting
RATELIMIT_DEFAULT=200 per day, 50 per hour
RATELIMIT_STORAGE_URL=memory://

# ========== Database Settings ==========
DATABASE_URI=sqlite:///data/scrambled-eggs.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ========== Tor Configuration ==========
TOR_ENABLED=True
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_PASSWORD=generate_a_secure_random_password_here
TOR_USE_BRIDGES=False
# Add bridge lines as semicolon-separated values if needed
# TOR_BRIDGE_LINES=obfs4 1.2.3.4:1234 cert=...;obfs4 5.6.7.8:5678 cert=...

# ========== P2P Network Settings ==========
P2P_ENABLED=True
P2P_PORT=0  # 0 = random port

# ========== Email Configuration ==========
# Email server settings (example for Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password  # Use an App Password for Gmail
MAIL_DEFAULT_SENDER="Scrambled Eggs <noreply@example.com>"
MAIL_SUPPRESS_SEND=False  # Set to True for testing

# Email content settings
MAIL_SUPPORT_EMAIL=support@example.com
MAIL_ADMIN_EMAIL=admin@example.com
FRONTEND_URL=http://localhost:5000  # Update with your frontend URL

# Email rate limiting
MAIL_RATE_LIMIT=100 per day, 10 per hour
# Add bootstrap nodes as comma-separated values
# P2P_BOOTSTRAP_NODES=node1.example.com:1234,node2.example.com:5678
P2P_MAX_PEERS=50
P2P_DISCOVERY_INTERVAL=300  # 5 minutes in seconds
P2P_USE_DHT=True

# ========== Storage Settings ==========
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=./data/uploads
TEMP_FOLDER=./data/temp

# ========== Admin Settings ==========
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
ADMIN_EMAIL=admin@example.com

# ========== Monitoring & Alerts ==========
MONITORING_ENABLED=True
METRICS_ENABLED=True

# Optional: Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/1234567

# Alert settings (configure at least one)
ALERT_EMAIL=admin@example.com
# ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/...
# ALERT_TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMnoPQRstUVwxyz
# ALERT_TELEGRAM_CHAT_ID=123456789

# ========== Backup Settings ==========
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM (cron format)
BACKUP_DIR=./backups

# ========== Plugin System ==========
PLUGINS_ENABLED=True
PLUGINS_DIR=./plugins

# ========== Feature Flags ==========
FEATURE_P2P=True
FEATURE_TOR=True
FEATURE_WEBRTC=True
FEATURE_ENCRYPTED_STORAGE=True

# ========== Build Information ==========
# These are automatically set during deployment
# BUILD_NUMBER=1
# COMMIT_HASH=abc123
