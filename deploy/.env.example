# Application Settings
NODE_ENV=production
DOMAIN=scrambled-eggs.com

# Database
DB_USER=scrambled_eggs
DB_PASSWORD=your_secure_db_password
DB_NAME=scrambled_eggs

# JWT
JWT_SECRET=generate_a_secure_jwt_secret
JWT_EXPIRES_IN=7d

# TURN Server
TURN_SECRET=generate_a_secure_turn_secret

# Redis
REDIS_PASSWORD=your_secure_redis_password

# Email (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=Scrambled Eggs <noreply@scrambled-eggs.com>

# Feature Flags
ENABLE_RECORDING=true
ENABLE_VIRTUAL_BACKGROUNDS=true
ENABLE_ANALYTICS=true

# Sentry (for error tracking)
SENTRY_DSN=your_sentry_dsn

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id
